{
  "name": "@toruslabs/secure-pub-sub",
  "version": "3.0.2",
  "description": "Helper methods secure publish and subscribe to a topic",
  "main": "dist/lib.cjs/index.js",
  "module": "dist/lib.esm/index.js",
  "unpkg": "dist/securePubSub.umd.min.js",
  "jsdelivr": "dist/securePubSub.umd.min.js",
  "types": "dist/lib.cjs/types/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "start": "torus-scripts start",
    "build": "torus-scripts build",
    "release": "torus-scripts release",
    "lint:ts": "eslint --fix '**/*.ts'",
    "prepack": "npm run build",
    "test:node": "vitest run --config ./test/configs/node.config.mts --coverage",
    "test:browsers": "vitest run --config ./test/configs/browsers.config.mts --coverage",
    "test": "npm run test:node && npm run test:browsers",
    "prepare": "husky"
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "@babel/runtime": "7.x"
  },
  "dependencies": {
    "@toruslabs/constants": "^14.2.0",
    "@toruslabs/eccrypto": "^6.0.2",
    "@toruslabs/http-helpers": "^8.1.0",
    "@toruslabs/metadata-helpers": "^7.0.2",
    "loglevel": "^1.9.2",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@babel/register": "^7.25.9",
    "@toruslabs/config": "^3.1.0",
    "@toruslabs/eslint-config-node": "^4.1.0",
    "@toruslabs/torus-scripts": "^7.1.2",
    "@types/elliptic": "^6.4.18",
    "@types/json-stable-stringify": "^1.2.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.13.10",
    "@vitest/browser": "^3.0.8",
    "@vitest/coverage-istanbul": "^3.0.8",
    "eslint": "^9.22.0",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "lint-staged": "^15.4.3",
    "mocha": "^11.1.0",
    "playwright": "^1.51.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "vitest": "^3.0.8"
  },
  "author": "Torus Labs",
  "license": "MIT",
  "lint-staged": {
    "!(*d).{js,ts}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/torusresearch/secure-pub-sub.git"
  },
  "bugs": {
    "url": "https://github.com/torusresearch/secure-pub-sub/issues"
  },
  "homepage": "https://github.com/torusresearch/secure-pub-sub#readme",
  "keywords": [
    "secure-pub-sub"
  ],
  "overrides": {
    "esbuild": "^0.25.0"
  },
  "engines": {
    "node": ">=20.x",
    "npm": ">=9.x"
  },
  "publishConfig": {
    "access": "public"
  }
}
